{{#each topics as |topic index|}}
     
    {{#paper-card as |card|}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}} {{topic.title}} {{/text.headline}}
          {{#text.subhead}}{{topic.fancy_title}}{{/text.subhead}}
        {{/title.text}}
        {{!-- {{title.media size="lg" src="{{topic.image_url}}" alt="Tomster" title="Tomster"}} --}}
      {{/card.title}}
      {{#card.actions}}
        {{!-- {{#paper-button}}Action 2{{/paper-button}} --}}
      {{/card.actions}}
        <p class="md-list-item-text">{{topic.excerpt}}</p> 
    {{/paper-card}}

{{/each}}
{{yield}}
